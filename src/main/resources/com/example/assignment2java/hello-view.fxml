<Pane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment2java.HelloController">
   <children>
      <TextField fx:id="input" layoutX="311.0" layoutY="376.0" promptText="Enter a Word" />
