      <Text layoutX="273.0" layoutY="32.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Scrabble Calculator">
         <font>
            <Font size="30.0" />
         </font></Text>
      <TextArea fx:id="letters" editable="false" layoutX="-2.0" layoutY="74.0" prefHeight="49.0" prefWidth="804.0" />
      <Label layoutX="14.0" layoutY="57.0" text="# of Letters" />
      <TextField fx:id="points" editable="false" layoutX="324.0" layoutY="40.0" promptText="Amount of Points" />
      <Label layoutX="344.0" layoutY="144.0" text="Points per Character" />
      <TextArea fx:id="character" editable="false" layoutX="2.0" layoutY="327.0" prefHeight="49.0" prefWidth="800.0" />
      <Label layoutX="2.0" layoutY="310.0" text="Word Used" />
      <TextField fx:id="invalid" editable="false" layoutX="528.0" layoutY="377.0" />
      <ImageView fitHeight="166.0" fitWidth="200.0" layoutX="298.0" layoutY="161.0">
         <image>
            <Image url="@../../../Images/scrabble.jpg" />
         </image>
      </ImageView>
   </children>
